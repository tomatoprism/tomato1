<div class="container">
  <div class="row">
    <h2>在庫10以下の商品</h2>
    <% @a.each do |less| %>
    <div class="col-xs-2 ">
      <div class="thumbnail">
        <div class="index_image">
          <%= link_to product_path(less.id) do %>
          <div class="index_image">
              <%= attachment_image_tag less, :image %>
            </div>
          <% end %>
        </div>
        <div class="caption" >
             <p>
              <%= truncate(less.title, length: 10) %>
            </p>

            <p>
              <%= less.artist.artist_name %>
            </p>

            <p>
             ¥<%= less.price %>
           </p>
           <p>在庫
            <%= less.stock %>
          </p>
          <p>
            <%= link_to "詳細", product_path(less), class:"btn-sm btn-success" %>
            <%= link_to "削除", admin_product_path(less), method: :delete, data: { confirm: "本当に削除しますか?"}, class:"btn-sm btn-danger" %>
          </p>
        </div>
    </div>
  </div>
  <% end %>
</div>
<div class="container">
  <div class="row" style= "text-align: center;" >

  <%= paginate @a, class: "pagenate" %>
</div>
</div>




<h2>商品一覧</h2>
   <div class="row">
    <% @products.each do |product| %>
      <div class="col-xs-4 ">
      <div class="thumbnail">
            <%= link_to product_path(product.id) do %>
            <div class="index_image">
            <%= attachment_image_tag product, :image %>
            </div>
            <% end %>
          <div class="caption" >
             <p> <%= link_to product_path(product.id) do %>
              <%= truncate(product.title, length: 10) %>
              <% end %>
            </p>

            <p>
              <%= link_to artist_path(product.artist.id) do %>
              <%= product.artist.artist_name %>
              <% end %>
            </p>

            <p>
             ¥<%= product.price %>
           </p>
           <p>在庫
            <%= product.stock %>
          </p>
          <p>
            <%= link_to "詳細", product_path(product), class:"btn-sm btn-success" %>
        <%= link_to "削除", admin_product_path(product), method: :delete, data: { confirm: "本当に削除しますか?"}, class:"btn-sm btn-danger" %>
          </p>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
<div class="container">
  <div class="row" style= "text-align: center;" >

  <%= paginate @products, class: "pagenate" %>
</div>
</div>
</div>
</div>