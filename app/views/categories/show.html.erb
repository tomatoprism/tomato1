<div class="navbar" style="background-color:  #F3FFD8;">
  <div class="container">
    <div class="row">
      <%= render 'top/category', artists: @artists, categories: @categories, animes: @animes %>
    </div>
  </div>
</div>
<div class="bg-image2">
  <div class = "bg-mask2" >
    <div class="container" style="background-color: white; ">


      <h3><%= @category.category_name %>の商品</h3>
      <div class="row">
        <% @products.each do |product| %>
        <div class="col-xs-3">
          <div class="thumbnail">
            <%= link_to product_path(product.id) do %>
            <div class="index_image">
            <%= attachment_image_tag product, :image %>
            </div>
            <% end %>
            <div class="caption">
              <p><%= link_to product_path(product.id) do %>
                <%= truncate(product.title, length: 10) %>
                <% end %>
              </p>
              <p><% product.categories.each do |cate| %>

                <%= link_to category_path(cate.id) do  %>
                <%= cate.category_name %>
                <% end %>
                <% end %>
              </p>
              <p><%= link_to artist_path(product.artist.id) do  %>
                <%= product.artist.artist_name %>
                <% end %>
              </p>

              <p>¥<%= product.price %></p>

              <p><% if product.stock == 0 then %>
                <p>在庫なし</p>
                <% else %>
                <p>在庫あり</p>
                <% end %></p>
              </div>
            </div>

          </div>
          <% end %>
        </div>
        <div class="container">
          <div class="row" style= "text-align: center;" >
            <%= paginate @products, class: "pagenate" %>
          </div>
        </div>
      </div>
    </div>


